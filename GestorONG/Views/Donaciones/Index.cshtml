@model IEnumerable<GestorONG.ViewModel.DonationsViewModel>

@{
    ViewBag.Title = "Listado de Donaciones";
    if (TempData["Acierto"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <p class="text-center align-middle"><span class="fa fa-check"></span> @TempData["Acierto"]</p>
        </div>
    }

    if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <p class="text-center align-middle"><span class="fa fa-times"></span> @TempData["Error"]</p>
        </div>
    }
}
<p>
    @Html.ActionLink("Nueva Donación", "Create", null, null, new { @class = "glyphicon glyphicon-plus btn btn-outline-primary" })
</p>
<table id="donations-list" class="table display">
    <thead>
        <tr>
            <th>
            </th>
            <th class="filterhead">
            </th>
            <th>
            </th>
            <th class="filterhead">
            </th>
            <th class="filterhead">
            </th>
            <th>
            </th>
            <th class="filterhead">
            </th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.donationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bankAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.collaborator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.periodicity)
            </th>
        </tr>
    </thead>
</table>

<!-- Modal -->
<div class="modal fade" id="rowSelectedModal" tabindex="-1" role="dialog" aria-labelledby="rowSelectedModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rowSelectedModalLabel">¿Qué deseas hacer con el registro seleccionado?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="btn-group mx-auto d-block text-center" role="group" aria-label="Basic example">
                    <button id="Details" type="button" class="btn btn-outline-primary">Detalles</button>
                    <button id="Edit" type="button" class="btn btn-outline-success">Editar</button>
                    <button id="Delete" type="button" class="btn btn-outline-danger">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryDataTables")
    @Scripts.Render("~/bundles/boostrapSelectJS")
    @Scripts.Render("~/bundles/jqueryDataTables")
    @Scripts.Render("~/bundles/momentJS")
    @Scripts.Render("~/bundles/boostrapSelectJS")
    @Scripts.Render("~/bundles/JSZIP")
    @Scripts.Render("~/bundles/jqueryDataTablesBootstrapJS")
    @Scripts.Render("~/bundles/jqueryDataTablesButtonsJS")
    @Scripts.Render("~/bundles/jqueryDataTablesButtonsHTML5JS")
    @Scripts.Render("~/bundles/jqueryDataTablesReorder")
    @Scripts.Render("~/bundles/DonationsJS")
    @Scripts.Render("~/bundles/Select2JS")
    @Scripts.Render("~/bundles/Select2JSES")
}

@section Styles{
    @Styles.Render("~/bundles/jqueryDataTablesCSS")
    @Styles.Render("~/bundles/jqueryDataTablesButtonsCSS")
    @Styles.Render("~/bundles/jqueryDataTablesCSSReorder")
    @Styles.Render("~/bundles/Select2CSS")
}
