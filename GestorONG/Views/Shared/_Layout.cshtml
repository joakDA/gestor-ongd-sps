<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Gestor ONGD Fundación Spínola Solidaria</title>
    <!--@Scripts.Render("~/Scripts/jquery-1.10.2.min.js")-->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/jqueryDataTablesCSS")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/jqueryUICSS")
    @Styles.Render("~/bundles/boostrapSelectCSS")

    <!--<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />-->
</head>
<body>
    <header>


        <div id="header" class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-8 col-md-3">
                        <a href='@Url.Action("Index", "Home", new {@class="navbar-brand"})'>
                            <img src='@Url.Content("~/Content/Images/common/logo.png")' class="img-responsive img-logo" />'
                        </a>
                    </div>
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse col-xs-4 col-md-6">
                        <ul class="nav navbar-nav">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Voluntarios<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Crear Voluntario", "Create", "Voluntarios")</li>
                                    <li>@Html.ActionLink("Listado de Voluntarios", "Index", "Voluntarios")</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Colaboradores<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Crear Colaborador", "Create", "Colaboradores")</li>
                                    <li>@Html.ActionLink("Listado de Colaboradores", "Index", "Colaboradores")</li>
                                    <li>@Html.ActionLink("Emitir Certificados Renta", "Certificados", "Colaboradores")</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Donaciones<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Nueva Donación", "Create", "Donaciones")</li>
                                    <li>@Html.ActionLink("Listado de Donaciones", "Index", "Donaciones")</li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sedes<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Nueva Sede", "Create", "Sedes")</li>
                                    <li>@Html.ActionLink("Listado de Sedes", "Index", "Sedes")</li>
                                </ul>
                            </li>
                            <!--<li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Correspondencia<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Nueva Sede", "Create", "Sedes")</li>
                                    <li>@Html.ActionLink("Listado de Sedes", "Index", "Sedes")</li>
                                </ul>
                            </li>-->
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">LOPD<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Registrar Incidencia", "Create", "LOPD")</li>
                                    <li>@Html.ActionLink("Listado de Incidencias", "Index", "LOPD")</li>
                                    <li>@Html.ActionLink("Registrar Entrada/Salida Información", "EntradaSalidaCreate", "LOPD")</li>
                                    <li>@Html.ActionLink("Listado de Entradas/Salidas Información", "EntradaSalidaIndex", "LOPD")</li>
                                </ul>
                            </li>
                            <li>@Html.ActionLink("Configuración", "Configuracion", "Home")</li>
                        </ul>
                    </div>
                    <!--<div class="col-xs-12 col-md-3">
                        <span class="nav navbar-text user-header text-center">¡Hola, @User.Identity.Name!</span>
                    </div>-->
                </div>
            </div>
        </div>
    </header>
    <div class="container-fluid body-content relleno-superior">
        @RenderBody()
        <hr />
    </div>
    <footer>
        <div class="container-fluid footer">
            <div class="row">
                <div class="navigation-menu col-xs-12 col-md-6">
                    <ul class="navigation-menu-list">
                        <li><a href="https://www.spinolasolidaria.org" target="_blank" title="Página Web Fundación Spínola Solidaria">Página Web SPS</a></li>
                        <li><a href="http://webmail.spinolasolidaria.org" target="_blank" title="Correo Corporativo Fundación Spínola Solidaria">Correo Corporativo SPS</a></li>
                        <li><a href="http://formacion.spinolasolidaria.org" target="_blank" title="Formación Voluntariado Internacional">Formación Voluntariado Internacional</a></li>
                        <li><a href="http://formacion.spinolasolidaria.org" target="_blank" title="Formación Voluntariado Internacional">Formación Voluntariado Internacional</a></li>
                        <li><a href="http://formacion.spinolasolidaria.org" target="_blank" title="Formación Voluntariado Internacional">Formación Voluntariado Internacional</a></li>
                    </ul>
                </div>
                <div class="logo-footer col-xs-12 col-md-6">
                    <img src='@Url.Content("~/Content/Images/common/logo.png")' class="img-responsive img-logo" />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 copyright">
                    <p class="text-center footer-text">&copy; @DateTime.Now.Year - Gestor ONGD Fundación Spínola Solidaria - Desarrollado por Joaquín A. Duro Arribas</p>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $('ul.nav li.dropdown').hover(function () {
            $(this).find('.dropdown-menu').stop(true, true).delay(200).fadeIn(500);
        }, function () {
            $(this).find('.dropdown-menu').stop(true, true).delay(200).fadeOut(500);
        });
    </script>
</body>
</html>
