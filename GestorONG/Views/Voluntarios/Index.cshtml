@model IEnumerable<GestorONG.DataModel.voluntario>

@{
    ViewBag.Title = "Listado de Voluntarios";
}

<h1 class="titulo-pagina text-center">Listado de Voluntarios</h1>

<!--  FORMAT TABLE WITH JqueryDatatables-->
@section Scripts{
    @Scripts.Render("~/bundles/jqueryDataTables")

    <script type="text/javascript">
        $(document).ready(function () {
            $('#listado-voluntarios').DataTable({
                "language": {
                    "lengthMenu": "Mostrando _MENU_ elementos por página",
                    "zeroRecords": "No se han encontrado resultados - lo lamentamos",
                    "info": "Mostrando página _PAGE_ de _PAGES_",
                    "infoEmpty": "No hay resultados",
                    "infoFiltered": "(total de _MAX_ registros)",
                    "search": "Buscar:",
                    "paginate": {
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                },
                "columnDefs": [
            {
                "targets": [8],
                "visible": false,
                "searchable": false
            },
            {
                "targets": [10],
                "visible": false
            },
             {
                 "targets": [11],
                 "visible": false
             },
              {
                  "targets": [13],
                  "visible": false
              }
                ]
            });
        });
    </script>
}
<p>
    @Html.ActionLink("Nuevo Voluntario", "Create", null, null, new { @class = "glyphicon glyphicon-plus btn btn-primary" })
</p>
<table id="listado-voluntarios" class="table table-responsive display" data-page-length='5'>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direccionPostal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.codigoPostal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.localidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.provincia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaAlta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sede)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Perfiles)
            </th>
            <th>Acciones</th>
</thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.direccionPostal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.codigoPostal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.localidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.provincia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pais)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fechaNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fechaAlta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sede)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Perfiles)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "glyphicon glyphicon-edit" })
                    @Html.ActionLink("Detalle", "Details", new { id = item.id }, new { @class = "glyphicon glyphicon-info-sign" }) 
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "glyphicon glyphicon-trash" })
                </td>
            </tr>
        }
    </tbody>
</table>
