@model IEnumerable<GestorONG.DataModel.tiposIncidencias>

@{
    ViewBag.Title = "Tipos de Incidencias de Seguridad";

    if (TempData["Acierto"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <p class="text-center align-middle"><span class="fa fa-check"></span> @TempData["Acierto"]</p>
        </div>
    }

    if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <p class="text-center align-middle"><span class="fa fa-times"></span> @TempData["Error"]</p>
        </div>
    }
}
<p>
    @Html.ActionLink("Nuevo Tipo de Incidencia de Seguridad", "Create", null, null, new { @class = "btn btn-outline-primary" })
</p>
<table id="listado-tipos-incidencias" class="table display" data-page-length='10'>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreIncidencia)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="@item.id">
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreIncidencia)
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- Modal -->
<div class="modal fade" id="rowSelectedModal" tabindex="-1" role="dialog" aria-labelledby="rowSelectedModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rowSelectedModalLabel">¿Qué deseas hacer con el registro seleccionado?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="btn-group mx-auto d-block text-center" role="group" aria-label="Basic example">
                    <button id="Edit" type="button" class="btn btn-outline-success">Editar</button>
                    <button id="Delete" type="button" class="btn btn-outline-danger">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryDataTables")
    @Scripts.Render("~/bundles/momentJS")
    @Scripts.Render("~/bundles/JSZIP")
    @Scripts.Render("~/bundles/jqueryDataTablesBootstrapJS")
    @Scripts.Render("~/bundles/jqueryDataTablesButtonsJS")
    @Scripts.Render("~/bundles/jqueryDataTablesButtonsHTML5JS")
    @Scripts.Render("~/bundles/SecurityIssuesTypesJS")
}

@section Styles{
    @Styles.Render("~/bundles/jqueryDataTablesCSS")
    @Styles.Render("~/bundles/jqueryDataTablesButtonsCSS")
}
