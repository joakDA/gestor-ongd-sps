@model IEnumerable<GestorONG.DataModel.vistaColaboradores>

@{
    ViewBag.Title = "Listado de Colaboradores";
    if (TempData["Acierto"] != null)
    {
        <div class="alert alert-success fade in">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <p class="text-center"><span class="glyphicon glyphicon-ok"></span> @TempData["Acierto"]</p>
        </div>
    }
}

<p class="botones-header">
    @Html.ActionLink("Nuevo Colaborador", "Create", null, null, new { @class = "glyphicon glyphicon-plus btn btn-primary" })
    @Html.ActionLink("Generar Certificados", "Certificados", null, null, new { @class = "glyphicon glyphicon-file btn btn-default" })
    @Html.ActionLink("Emitir Remesas", "Remesas", null, null, new { @class = "glyphicon glyphicon-list-alt btn btn-success" })
</p>
    <table id="listado-colaboradores" class="table table-responsive display" data-page-length='5'>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.apellidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.direccionPostal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.codigoPostal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.localidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.provincia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.pais)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.telefono1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.telefono2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaNacimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CIF_NIF)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CuentaBancaria)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Perfiles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaAlta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Periodicidad)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.apellidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.direccionPostal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.codigoPostal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.localidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.provincia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.pais)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.telefono1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.telefono2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaNacimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CIF_NIF)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CuentaBancaria)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Perfiles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaAlta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Periodicidad)
                </th>
                <th>Acciones</th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.direccionPostal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.codigoPostal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.localidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.provincia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.pais)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.telefono1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.telefono2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fechaNacimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CIF_NIF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CuentaBancaria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Perfiles)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fechaAlta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Periodicidad)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "glyphicon glyphicon-edit" })
                        @Html.ActionLink("Detalle", "Details", new { id = item.id }, new { @class = "glyphicon glyphicon-info-sign" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "glyphicon glyphicon-trash" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

<!--  FORMAT TABLE WITH JqueryDatatables-->
@section Scripts{
    @Scripts.Render("~/bundles/jqueryDataTables")
    @Scripts.Render("~/bundles/boostrapSelectJS")
    @Scripts.Render("~/bundles/jqueryDataTablesBootstrapJS")
    @Scripts.Render("~/bundles/CollaboratorsJS")
}

@section Styles{
    @Styles.Render("~/bundles/jqueryDataTablesCSS")
}
