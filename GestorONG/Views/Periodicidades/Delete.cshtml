@model GestorONG.DataModel.periodicidades

@{
    ViewBag.Title = "Eliminar una Periodicidad";
}

<h1 class="titulo-pagina text-center">Eliminación de la Periodicidad @Html.DisplayFor(model => model.nombre)</h1>

<h2 class="confirmacion-eliminacion">¿Estás seguro de que deseas eliminar la periodicidad?</h2>
<div>
    <hr />
    <div class="row fila-form">
        <div class="col-xs-12 col-md-6 text-center">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nombre)
                </dd>
            </dl>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row botones-inferiores">
        <div class="col-xs-12 text-center">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
        </div>
    </div>
}
